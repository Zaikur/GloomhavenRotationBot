@page
@model RostersModel

@if (!string.IsNullOrWhiteSpace(Model.Warning))
{
    <div class="alert alert-warning">@Model.Warning</div>
}

<div class="row g-3">
    <div class="col-12 col-lg-6">
        <div class="card shadow-sm">
            <div class="card-body">
                <h5 class="card-title">DM Roster</h5>

                <ul class="list-group mb-3">
                    @for (int i = 0; i < Model.Dm.Members.Count; i++)
                    {
                        var id = Model.Dm.Members[i];
                        var name = Model.NameFor(id);
                        <li class="list-group-item d-flex align-items-center justify-content-between">
                            <div>
                                <span class="me-2">@((i == Model.Dm.Index) ? "➡️" : "")</span>
                                <strong>@(i + 1).</strong> @name <span class="text-muted small">(<code>@id</code>)</span>
                            </div>
                            <div class="btn-group">
                                <form method="post" asp-page-handler="Up">
                                    <input type="hidden" name="Role" value="dm" />
                                    <input type="hidden" name="Index" value="@i" />
                                    <button class="btn btn-sm btn-outline-secondary" type="submit">↑</button>
                                </form>
                                <form method="post" asp-page-handler="Down">
                                    <input type="hidden" name="Role" value="dm" />
                                    <input type="hidden" name="Index" value="@i" />
                                    <button class="btn btn-sm btn-outline-secondary" type="submit">↓</button>
                                </form>
                                <form method="post" asp-page-handler="SetCurrent">
                                    <input type="hidden" name="Role" value="dm" />
                                    <input type="hidden" name="Index" value="@i" />
                                    <button class="btn btn-sm btn-outline-primary" type="submit">Set Current</button>
                                </form>
                                <form method="post" asp-page-handler="Remove">
                                    <input type="hidden" name="Role" value="dm" />
                                    <input type="hidden" name="Index" value="@i" />
                                    <button class="btn btn-sm btn-outline-danger" type="submit">Remove</button>
                                </form>
                            </div>
                        </li>
                    }
                </ul>

                <form method="post" asp-page-handler="Add" class="row g-2">
                    <input type="hidden" name="Role" value="dm" />
                    <div class="col-8">
                        <select class="form-select" name="UserId">
                            <option value="">-- select member --</option>
                            @foreach (var m in Model.GuildMembers)
                            {
                                <option value="@m.Id">@m.Name</option>
                            }
                        </select>
                    </div>
                    <div class="col-4">
                        <button class="btn btn-primary w-100" type="submit">Add</button>
                    </div>
                </form>

            </div>
        </div>
    </div>

    <div class="col-12 col-lg-6">
        <div class="card shadow-sm">
            <div class="card-body">
                <h5 class="card-title">Food Roster</h5>

                <ul class="list-group mb-3">
                    @for (int i = 0; i < Model.Food.Members.Count; i++)
                    {
                        var id = Model.Food.Members[i];
                        var name = Model.NameFor(id);
                        <li class="list-group-item d-flex align-items-center justify-content-between">
                            <div>
                                <span class="me-2">@((i == Model.Food.Index) ? "➡️" : "")</span>
                                <strong>@(i + 1).</strong> @name <span class="text-muted small">(<code>@id</code>)</span>
                            </div>
                            <div class="d-flex flex-wrap">
                                <form method="post" asp-page-handler="Up">
                                    <input type="hidden" name="Role" value="food" />
                                    <input type="hidden" name="Index" value="@i" />
                                    <button class="btn btn-sm btn-outline-secondary" type="submit">↑</button>
                                </form>

                                <form method="post" asp-page-handler="Down">
                                    <input type="hidden" name="Role" value="food" />
                                    <input type="hidden" name="Index" value="@i" />
                                    <button class="btn btn-sm btn-outline-secondary" type="submit">↓</button>
                                </form>

                                <form method="post" asp-page-handler="SetCurrent">
                                    <input type="hidden" name="Role" value="food" />
                                    <input type="hidden" name="Index" value="@i" />
                                    <button class="btn btn-sm btn-outline-primary" type="submit">Set Current</button>
                                </form>

                                <form method="post" asp-page-handler="Remove">
                                    <input type="hidden" name="Role" value="food" />
                                    <input type="hidden" name="Index" value="@i" />
                                    <button class="btn btn-sm btn-outline-danger" type="submit">Remove</button>
                                </form>
                            </div>
                        </li>
                    }
                </ul>

                <form method="post" asp-page-handler="Add" class="row g-2">
                    <input type="hidden" name="Role" value="food" />
                    <div class="col-8">
                        <select class="form-select" name="UserId">
                            <option value="">-- select member --</option>
                            @foreach (var m in Model.GuildMembers)
                            {
                                <option value="@m.Id">@m.Name</option>
                            }
                        </select>
                    </div>
                    <div class="col-4">
                        <button class="btn btn-primary w-100" type="submit">Add</button>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>
