@{
    var path = Context?.Request?.Path.Value?.ToLowerInvariant() ?? "/";
    string Active(string startsWith) => path.StartsWith(startsWith) ? "active" : "";
}

<!doctype html>
<html data-bs-theme="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>Gloomhaven Bot</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .app-shell { min-height: 100vh; background: radial-gradient(1200px 600px at 20% 0%, rgba(255,255,255,.06), transparent 60%), #0b0f14; }
        .content-wrap { max-width: 1400px; }
        .btn-gap .btn, .btn-gap form { margin-right: .35rem; margin-bottom: .35rem; }
        .btn-gap form { display: inline-block; }
        .card { border: 1px solid rgba(255,255,255,.08); }
        .list-group-item { border-color: rgba(255,255,255,.08); }
        code { color: #9fd7ff; }
    </style>
</head>

<body class="app-shell text-light">
    <nav class="navbar navbar-expand-lg bg-black border-bottom border-secondary sticky-top">
        <div class="container-fluid px-3">
            <a class="navbar-brand fw-semibold" href="/">Gloomhaven Bot</a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#nav"
                    aria-controls="nav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="nav">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link @Active("/")" href="/">Status</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @Active("/setup")" href="/Setup">Setup</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @Active("/rosters")" href="/Rosters">Rosters</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @Active("/calendar")" href="/Calendar">Calendar</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @Active("/schedule")" href="/Schedule">Schedule</a>
                    </li>
                </ul>

                <span class="navbar-text text-white-50 small">
                    LAN Admin
                </span>
            </div>
        </div>
    </nav>

    <main class="container-fluid px-3 py-4">
        <div class="content-wrap mx-auto">
            @RenderBody()
        </div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
